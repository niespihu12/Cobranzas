# ----------------------------------------------------------------------------
# ASTERISK
# ----------------------------------------------------------------------------
# Configuración del servidor Asterisk
export ASTERISK_HOST="localhost"
export ASTERISK_AMI_PORT="5038"
export ASTERISK_AMI_USER="voicebot"
export ASTERISK_AMI_SECRET="voicebot123"

# Trunk SIP para llamadas salientes
export ASTERISK_TRUNK="PJSIP/trunk-salida"

# ----------------------------------------------------------------------------
# RUTAS
# ----------------------------------------------------------------------------
# Directorio de audios generados
export VOICEBOT_AUDIO_PATH="/var/lib/asterisk/sounds/voicebot"

# Directorio del CTI
export VOICEBOT_CTI_PATH="./02_datos/salida/CTI_ENRIQUECIDO_COMPLETO.xlsx"

# Archivo de resultados
export VOICEBOT_RESULTADOS_PATH="./resultados_llamadas.csv"

# ----------------------------------------------------------------------------
# CONFIGURACIÓN DE LLAMADAS
# ----------------------------------------------------------------------------
# Llamadas simultáneas máximas
export VOICEBOT_MAX_CONCURRENT="5"

# Timeout para que contesten (segundos)
export VOICEBOT_CALL_TIMEOUT="30"

# Reintentos máximos por cliente
export VOICEBOT_MAX_RETRIES="3"

# Delay entre reintentos (segundos)
export VOICEBOT_RETRY_DELAY="300"

# Horario de llamadas (hora local)
export VOICEBOT_HORA_INICIO="8"
export VOICEBOT_HORA_FIN="20"
